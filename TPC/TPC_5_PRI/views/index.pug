extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Novo Aluno
            .w3-container
                form.w3-container(action='/alunos' method='POST')
                    label
                        b Nome
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nome')
                    label 
                        b Identificador
                    input.w3-input.w3-border.w3-light-grey(type='text' name='identificador')
                    label 
                        b Curso
                    input.w3-input.w3-border.w3-light-grey(type='text' name='curso')
                    input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
        .w3-card-4
            table.w3-table-all
                tr
                    th Nome
                    th Curso
                    th Notas
                each i in lista
                    tr
                        td= i.nome
                        td= i.curso
                        td
                             form.w3-container(action='/alunos/' + i.identificador + '/notas' method = 'GET')
                                input.w3-btn.w3-blue-grey(type='submit' value='Ver Detalhes') 

                        td 
                            button.w3-button.w3-circle.w3-blue-grey(onclick="apagaItem('" + i.id + "')") Apagar
                        
        footer.w3-container.w3-teal
            address Gerado por Lista de Alunos App::
                

